<div class = "screen_placement">
<h2>All Tag Types </h2>

<form method="get" action = "/tags/new">

    <input class = "button" type="submit" value="Add a new Tag Type"/>
</form>

<table>
  <tr>
    <th>Name</th>
    <th>No of times used</th>
    <th></th>
    <th></th>
  </tr>

<%@tag_list.each do |tag_f|%>
  <tr>
<td><a href = "/tags/<%=tag_f["id"]%>/transactions"><%for tag in @tags %><%=tag.name if tag.id == tag_f["id"].to_i%><%end%></td>

<td><%=tag_f["count"]%></td>

<td><a href = "/tags/<%=tag_f["id"].to_i%>/edit"> <img src = "/images/icons8-edit-50.png" height="20" width="20"></a></td>

<td><form method="post" action = "/tags/delete/<%=tag_f["id"].to_i%>">

<button type="submit" <%if tag_f["count"].to_i>0%><%="disabled"%><%end%>>
<img src = "/images/icons8-waste-26.png" height="15" width="15">
</button>
</form></td>
<%end%>
</tr>

</table>
</div>
