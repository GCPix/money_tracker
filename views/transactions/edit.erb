<div class = "screen_placement" style = "width:50%; background-color:white; border-color: black;">
<form method = "post" action = "/transactions/<%=@transaction.id%>">

  <label for = "type">Type: </label>
  <select id = "type" name = "type">
    <option <%= 'selected' if  'Purchase'== @transaction.type%> value ="Purchase">Purchase</option>
    <option <%= 'selected' if  'Pay in'== @transaction.type%> value ="Pay in">Income</option>
  </select>
<br>
  <label for = "date">Date: </label>
    <input id="date" type = "date" name = "t_date" value = "<%=@transaction.t_date%>"required/>
<br>
  <label for = "merchant">Merchant: </label>
    <select id = "merchant" name = "merchant_id">
      <%for merchant in @merchant_list%>
      <option value =<%=merchant.id%> <%="selected" if merchant.id == @transaction.merchant_id%>> <%=merchant.name%> </option> <%end%>
    </select>
<br>
  <label for = "description">Description: </label>
    <input id="description" type = "text" name = "description" value = "<%=@transaction.description%>"required/>
<br>
  <label for ="amount">Amount: </label>
    <input id="amount" type = "number" min = "1" name ="amount" value ="<%if @transaction.type=='Pay in'%><%=(@transaction.amount)/100%><%end%><%if @transaction.type=='Purchase'%><%=(@transaction.amount/100)*-1%><%end%>"required/>
<br>
  <label for = "tag">Tag: </label>
    <select id = "tag" name = "tag_id">
      <%for tag in @tag_list%>
      <option value = <%=tag.id%> <%='selected' if tag.id == @transaction.tag_id%>><%=tag.name%></option> <%end%>
    </select>

<br>
    <input type ="submit" value ="save"/>

</form>
</div>
