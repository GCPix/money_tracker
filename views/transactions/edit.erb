<form method = "post" action = "/transactions/edit">

  <label for = "type">Type: </label>
  <select id = "type" name = "type">
    <option value = "purchase">Purchase</option>
    <option value = "pay in">Income/option>
  </select>

  <label for = "date">Date: </label>
    <input id="date" type = "date" name = "t_date" value = "<%=@transaction.t_date%>"required/>

  <label for = "merchant">Merchant: </label>
    <select id = "merchant" name = "merchant_id">
      <%for merchant in @merchant_list%>
      <option value = <%=merchant.id%> <%= "selected" if merchant.id == @transaction.merchant_id%>> <%=merchant.name%> </option> <%end%>
    </select>

  <label for = "description">Description: </label>
    <input id="description" type = "text" name = "description" value = "<%=@transaction.description%>"required/>

  <label for = "amount">Amount: </label>
    <input id="amount" type = "text" name = "amount" value = "  <%if @transaction.type=="pay in"%>
        <%=(@transaction.amount)/100%>
      <%end%>
      <%if @transaction.type=="purchase"%>
        <%=((@transaction.amount)/100)*-1%>
      <%end%>"required/>

  <label for = "tag">Tag: </label>
    <select id = "tag" name = "tag_id">
      <%for tag in @tag_list%>
      <option value = <%=tag.id%> value = <%=tag.id%> <%= "selected" if tag.id == @transaction.tag_id%>><%=tag.name%></option> <%end%>
    </select>


    <input type = "submit" value = "Edit Transaction"/>

</form>
