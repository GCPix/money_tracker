<h1> A list of all merchants </h1>

<form method="get" action = "/merchants/new">

    <input class = "button" type="submit" value="Add a new Merchant"/>
</form>

<table>
  <tr>
    <th>Name</th>
    <th>No of times used</th>
  </tr>

<%@merchant_list.each do |merchant_f|%>
  <tr>
<td><%for merchant in @merchants %><%=merchant.name if merchant.id == merchant_f["id"].to_i%><%end%></td>
<td><%=merchant_f["count"]%></td>

<td><a href = "/merchants/<%= merchant_f["id"].to_i %>"> Show Detail</a></td>

<%end%>
</tr>

</table>
